{
  "name": "@xwtec/eslint-config-legacy",
  "version": "4.3.1",
  "description": "ESLint Configuration for xwtec legacy projects",
  "keywords": [
    "xwtec",
    "eslint",
    "config",
    "legacy"
  ],
  "homepage": "https://github.com/fisker/@xwtec/eslint-config-legacy#readme",
  "bugs": {
    "url": "https://github.com/fisker/@xwtec/eslint-config-legacy/issues"
  },
  "repository": "xwtec/eslint-config-legacy",
  "license": "MIT",
  "author": {
    "name": "xwtec",
    "url": "https://github.com/xwtec"
  },
  "sideEffects": false,
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "build": "npm-run-all build:*",
    "build:rules": "node -r esm ./scripts/rules",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint build format dist"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@xwtec/prettier-config",
  "dependencies": {
    "@xwtec/eslint-config": "6.4.0",
    "babel-eslint": "10.1.0",
    "eslint-config-prettier": "7.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@fisker/commitlint-config": "1.3.1",
    "@fisker/husky-config": "4.0.1",
    "@fisker/lint-staged-config": "3.0.1",
    "@xwtec/eslint-config": "6.4.0",
    "@xwtec/prettier-config": "2.0.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.17.0",
    "esm": "3.2.25",
    "husky": "5.0.6",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.25.0",
    "mem": "8.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.1",
    "sort-package-json": "1.48.1",
    "write-prettier-file": "1.2.6"
  },
  "peerDependencies": {
    "eslint": "*",
    "prettier": "*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}

{
  "name": "@xwtec/eslint-config-legacy",
  "version": "4.1.11",
  "description": "ESLint Configuration for xwtec legacy projects",
  "main": "index.js",
  "keywords": [
    "xwtec",
    "eslint",
    "config",
    "legacy"
  ],
  "files": [
    "index.js"
  ],
  "scripts": {
    "release": "run-s lint build test format dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "test": "eslint **/*.js --config ./index.js",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue}",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "lint:prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --check",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write",
    "build": "npm-run-all build:*",
    "build:rules": "node -r esm ./scripts/rules"
  },
  "license": "MIT",
  "dependencies": {
    "@xwtec/eslint-config": "^6.0.12",
    "eslint-config-prettier": "^6.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xwtec/eslint-config-legacy.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@fisker/commitlint-config": "^1.1.0",
    "@fisker/husky-config": "^1.1.0",
    "@fisker/lint-staged-config": "^1.0.4",
    "@xwtec/eslint-config": "^6.0.12",
    "@xwtec/prettier-config": "^1.0.2",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^6.0.1",
    "esm": "^3.2.25",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.0",
    "markdownlint-cli": "^0.17.0",
    "mem": "^5.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "write-prettier-file": "1.0.2"
  },
  "peerDependencies": {
    "eslint": "*",
    "prettier": "*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "bugs": {
    "url": "https://github.com/xwtec/eslint-config-legacy/issues"
  },
  "homepage": "https://github.com/xwtec/eslint-config-legacy#readme",
  "author": {
    "name": "xwtec",
    "url": "https://github.com/xwtec"
  },
  "prettier": "@xwtec/prettier-config",
  "sideEffects": false
}
